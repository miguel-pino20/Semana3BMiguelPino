<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana3BMiguelPino.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Navegacion entre ventanas S3" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
        </Frame>
        <Entry x:Name="txt_usuario" Placeholder="Ingrese el usuario" FontSize="15"/>
        <Entry x:Name="txt_contraseña" Placeholder="Ingrese la contraseña" IsPassword="True" FontSize="15"/>
        <Button x:Name="btnAbrir" Text="Abrir Ventana Dos" Clicked="btnAbrir_Clicked"/>
    </StackLayout>

</ContentPage>
